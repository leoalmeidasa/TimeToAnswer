<div class="container-fluid">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h3 class="m-0 font-weight-bold "><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h3>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th><%= translate_attribute(@questions, :description)%></th>
              <th><%= translate_attribute(@questions, :subject)%></th>
              <th>
                <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                  <i class="fa fa-plus"></i>
                <% end %>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.description %></td>
              <td><%= question.subject.description %></td>
              <td style="width: 100px">
                <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-warning btn-circle btn-sm" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_question_path(question),method: :delete, class:"btn btn-danger btn-circle btn-sm", data: {confirm: t('messages.confirm_with', item: question.description.truncate(15) ) } do %>
                  <i class="fa fa-remove"></i>
                <%end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="pagination justify-content-center">
        <%= paginate @questions %>
      </div>
    </div>
  </div>
</div>